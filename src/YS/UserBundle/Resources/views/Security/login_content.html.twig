{% trans_default_domain 'FOSUserBundle' %}
{% extends 'YSUserBundle::layout_login_content.html.twig'  %}
{% block login_content %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if error %}
            <div class="section no-pad-top red-text">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

        <label for="password">
            <span class="col s6 no-padding">
                {{ 'security.login.password'|trans }}
            </span>
            <span class="col s6 no-padding right-align">
                <a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a>
            </span>
        </label>
        <input type="password" id="password" name="_password" required="required" />

        <div class="row">
            <div class="col s12">
                <input type="submit" id="_submit" name="_submit" class="btn col s12" value="Sign in" />
            </div>
        </div>
    </form>
{% endblock %}
{% block login_button %}
    <div class="row">
        <div class="col s12">
            <a class="btn col s12" href="{{ path('fos_user_registration_register') }}">Sign up</a>
        </div>
    </div>
{% endblock %}

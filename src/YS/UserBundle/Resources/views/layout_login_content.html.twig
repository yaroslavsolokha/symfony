{% trans_default_domain 'FOSUserBundle' %}

<div class="user container">
    <div class="section">
        <div class="row">
            <div class="col s12 m6 offset-m3 l4 offset-l4">
                <div class="card">
                    <div class="card-content">
                        {% block login_content %} {% endblock %}
                    </div>
                    <div class="card-action">
                        <div class="row">
                            <div class="col s12">
                                <a class="btn btn-block btn-social btn-facebook" href="{{ hwi_oauth_login_url('facebook') }}">
                                    <i class="fa fa-facebook"></i>
                                    Facebook
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                <a class="btn btn-block btn-social btn-google" href="{{ hwi_oauth_login_url('gplus') }}">
                                    <i class="fa fa-google"></i>
                                    Google
                                </a>
                            </div>
                        </div>
                        {% block login_button %} {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>